---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---
<section class="tag-page">
    <h1>#{{ tag }}</h1>
    <ul>
    {% set taglist = collections[ tag ] %}
    {% for post in taglist | reverse %}
    <li><a href="{{ post.url }}">
        
        {% if post.data.title | length %}
            {{ post.data.title }}
        {% else %}
            {{ post.date | postDate }}
        {% endif %}

    </a></li>
    {% endfor %}
    </ul>
</section>